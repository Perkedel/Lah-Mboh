// NSFW Content
OptionValue "NSFWContentValues"
{
	1, "$NSFWOn"
	0, "$NSFWOff"
}

OptionMenu "NSFWContentOptions"
{
    class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
	Title "$NSFWContentTitle"
	Caption "$NSFWContentTitle"

	StaticText "$NSFWWarn", "Orange"
	StaticText ""

	Option "NSFW", "nsfwcontent", "NSFWContentValues"
    LMBH_Tooltip "$NSFWTooltip"
	//StaticTextSwitchable "$NSFWDescOff", "$NSFWDescOn", "nsfwcontent", "White"

	StaticText ""
	StaticText "$NSFWRequire"
	StaticText ""
}
// end NSFW

// NSFL Content
OptionValue "NSFLContentValues"
{
	1, "$NSFLOn"
	0, "$NSFLOff"
}

OptionValue "guroContentValues"
{
    1, "$NSFLGuroOn"
    0, "$NSFLGuroOff"
}

OptionValue "derogatoryNaziValues"
{
    1, "$NSFLNaziOn"
    0, "$NSFLNaziOff"
}

OptionValue "derogatoryLgbtValues"
{
    1, "$NSFLLGBTOn"
    0, "$NSFLLGBTOff"
}

OptionValue "derogatoryColorValues"
{
    1, "$NSFLNWordOn"
    0, "$NSFLNWordOff"
}

OptionMenu "NSFLContentOptions"
{
    class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
	Title "$NSFLContentTitle"
	Caption "$NSFLContentTitle"

	StaticText "$NSFLWarn", "Cyan"
	StaticText ""

    // other variables modders can use for safety of the YouTubers & Twitch streamers
	Option "$NSFLEnableSay", "nsflMaster", "nsflContentValues" // Master options for such community guideline violations below
	LMBH_Tooltip "$NSFLTooltip"
	Option "$NSFLGuro", "gurocontent", "guroContentValues", "nsflMaster" // Gore bloods pretty much
	LMBH_Tooltip ""
	Option "$NSFLNazi", "derogatorynazi", "derogatoryNaziValues", "nsflMaster" // turn off to Wolfenstein EU version. "What else do you remember?"
	LMBH_Tooltip ""
	Option "$NSFLLGBT", "derogatorylgbt", "derogatoryLgbtValues", "nsflMaster" // threat to scronch is forbidden. catch & repurify!
	LMBH_Tooltip ""
	Option "$NSFLNWord", "derogatorycolor", "derogatoryColorValues", "nsflMaster" // Perkedel & affiliates forbid toner derogatory!
	LMBH_Tooltip ""

	StaticText ""
	StaticText "$NSFLRequire"
	StaticText ""
}
// end NSFL

// Seizure Safety
OptionValue "SeizureFlashingValues"
{
	1, "$SeizureFlashOn"
	0, "$SeizureFlashOff"
}

OptionValue "SeizureHeartValues"
{
	1, "$SeizureHeartOn"
	0, "$SeizureHeartOff"
}

OptionMenu "SeizureSafetyOptions" {
    Class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
	Title "$SeizureSafetyTitle"
	Caption "$SeizureSafetyTitle"

	StaticText "$SeizureWarn", "Orange"
	StaticText "$SeizureWarn2", "Orange"
	StaticText ""

	Option "$SeizureFlashTitle", "flashinglight", "SeizureFlashingValues"
	Option "$SeizureHeartTitle", "horrorcontent", "SeizureHeartValues"
}

