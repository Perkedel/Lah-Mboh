OptionValue "SubtitleAlignValues"
{
    0, "$SUBTITLING_ALIGN_BOTTOM_CENTER"
    1, "$SUBTITLING_ALIGN_BOTTOM_LEFT"
    2, "$SUBTITLING_ALIGN_BOTTOM_RIGHT"
    3, "$SUBTITLING_ALIGN_TOP_CENTER"
    4, "$SUBTITLING_ALIGN_TOP_LEFT"
    5, "$SUBTITLING_ALIGN_TOP_RIGHT"
}

OptionMenu "SubtitlingOptions" {
    Class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
    Title "$SubtitlingTitle"
    Caption "$SubtitlingTitle"

    Option "$MSGMNU_SUBTITLES", "inter_subtitles", "OnOff"
    //LMBH_Tooltip "$MSGMNU_SUBTITLES_TOOLTIP"
    Option "$SubtitlingAlignTitle", "LMBH_Subtitling_AlignFrom", "SubtitleAlignValues"
    //LMBH_Tooltip "$SubtitlingAlignTitle_TOOLTIP"
    ScaleSlider "$SubtitlingScaleTitle", "LMBH_Subtitling_Scale", 0, 10, 0.1, "$OPTVAL_SMART"
}
