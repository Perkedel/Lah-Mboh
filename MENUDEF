    Submenu "$SubtitlingOptionSay", "SubtitlingOptions"
}

// m8f
// Stupid Achievements
// Namepace `sa_` ðŸ‘‰ `LMBH_`
// Namepace `SA_` ðŸ‘‰ `LMBH_Achieve_`
// Entry point /////////////////////////////////////////////////////////////////

AddOptionMenu OptionsMenu
{
  	Submenu "$LMBH_Achieve_MENU_TITLE", LMBH_Achieve_Options
}

AddOptionMenu OptionsMenuSimple
{
	Submenu "$LMBH_Achieve_MENU_TITLE", LMBH_Achieve_Options
}


// Option menus ////////////////////////////////////////////////////////////////

OptionMenu LMBH_Achieve_Options
{
    class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
    Title "$LMBH_Achieve_MENU_TITLE"

    StaticText "$LMBH_Achieve_ACHIEVEMENTS", 1
    Submenu "$LMBH_Achieve_UNLOCKED", LMBH_UnlockedAchievements
    Submenu "$LMBH_Achieve_LOCKED"  , LMBH_LockedAchievements

    StaticText ""
    Option "$LMBH_Achieve_NOTIFY"    , LMBH_achieveNotification_enabled, OnOff
    Option "$LMBH_Achieve_HORIZONTAL", LMBH_horizontal_position, LMBH_HorizontalPositionValues
    Option "$LMBH_Achieve_VERTICAL"  , LMBH_vertical_position,   LMBH_VerticalPositionValues
    Option "$LMBH_Achieve_ANIMATION" , LMBH_animation_type,      LMBH_AnimationValues

    StaticText ""
    Command "$LMBH_Achieve_TEST", LMBH_testAchieve

    StaticText ""
    SafeCommand "$LMBH_Achieve_CLEAR", LMBH_clear_achievements
}

OptionMenu LMBH_LockedAchievements
{
    Class "LMBH_LockedAchievements"
    Title "$LMBH_Achieve_LOCKED_TITLE"
}

OptionMenu LMBH_UnlockedAchievements
{
    Class "LMBH_UnlockedAchievements"
    Title "$LMBH_Achieve_UNLOCKED_TITLE"
}

// Option values ///////////////////////////////////////////////////////////////

OptionValue LMBH_HorizontalPositionValues
{
  0, "$LMBH_Achieve_LEFT"
  1, "$LMBH_Achieve_RIGHT"
}

OptionValue LMBH_VerticalPositionValues
{
  0, "$LMBH_Achieve_TOP"
  1, "$LMBH_Achieve_BOTTOM"
}

OptionValue LMBH_AnimationValues
{
  0, "$LMBH_Achieve_SLIDE_VERTICAL"
  1, "$LMBH_Achieve_SLIDE_HORIZONTAL"
  2, "$LMBH_Achieve_FADE_IN_OUT"
  3, "$LMBH_Achieve_DISABLED"
}
// end m8f

// ZDoom Tutorials
// This creates a new custom options menu:
OptionMenu "ZDoomWeirdOptions"
{
    class "LMBH_TF_TooltipOptionMenu"
    LMBH_TooltipGeometry 0.5, 1.0
    Title "ZDoom Weird"
    Caption "ZDoom Weird"

    // Add an option for the explodey_zombies CVar:
    Option "Exploding Zombiemen", "zd_explodey_zombies", "OnOff" //OnOff is an existing optionvalue, you don't need to define it
    // Add n option for the weaponstyle CVar:
    Option "Weapon style", "zd_weaponstyle", "WeaponStyleOptions" //WeaponStyleOptions will be a custom option value
}

// A custom option value that attaches unique names
// to the possible CVar values:
OptionValue "WeaponStyleOptions"
{
  0, "Classic"
  1, "Enhanced"
  2, "Special"
}

// This will make your menu appear in the default
// GZDoom options menu, right before the CustomizeControls
// section:
AddOptionMenu "OptionsMenu" before "CustomizeControls"
{
  Submenu "ZDoom Weird options", "ZDoomWeirdOptions"
}

// This does the same but also will make it visible
// if the player has Simple Options Menu enabled:
AddOptionMenu "OptionsMenuSimple" before "CustomizeControls"
{
  Submenu "ZDoom Weird options", "ZDoomWeirdOptions"
}
// end ZDoom