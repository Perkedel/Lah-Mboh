// Add Now!
AddOptionMenu "OptionsMenu"
{
	Submenu "$NSFWOptionSay", "NSFWContentOptions"
	Submenu "$SeizureSafetyTitle", "SeizureSafetyOptions"
}

AddOptionMenu "OptionsMenuSimple"
{
	Submenu "$NSFWOptionSay", "NSFWContentOptions"
	Submenu "$SeizureSafetyTitle", "SeizureSafetyOptions"
}

AddOptionMenu "GameplayOptions"
{
	StaticText ""
	Submenu "$NSFWOptionSay", "NSFWContentOptions"
	Submenu "$SeizureSafetyTitle", "SeizureSafetyOptions"
}
// end Add Now!

